# Maintainer: Jeremias Pettinen <hi@jeremi.as>

pkgname=subsystemctl
pkgver=0.2.0
pkgrel=1
pkgdesc="Run systemd in WSL2"
arch=('x86_64' 'aarch64')
url="https://github.com/sorah/subsystemctl"
license=('MIT')
depends=('gcc-libs')
makedepends=('cargo')
source=(
  "$pkgname-$pkgver.tar.gz::https://github.com/sorah/subsystemctl/archive/v${pkgver}.tar.gz"
)
sha256sums=('720fba6cb21be66e7a2b957a98de0542ca950b586768713e45d5dc626e0f8dea')

build() {
  cd "subsystemctl-$pkgver"
  cargo build --release --locked --all-features
}

package() {
  cd "subsystemctl-$pkgver"
  install -Dm6755 target/release/subsystemctl "${pkgdir}/usr/bin/subsystemctl"
  install -Dm644 -t "$pkgdir/usr/share/licenses/$pkgname/" LICENSE
}
